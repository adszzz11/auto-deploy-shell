# Multi Deploy Configuration
# 이 파일을 source하여 다중 배포 시 기본값으로 사용

# 인스턴스 수 범위
export MULTI_DEPLOY_MIN_INSTANCES="2"
export MULTI_DEPLOY_MAX_INSTANCES="10"

# 배포 옵션
export MULTI_DEPLOY_PARALLEL="false"           # 병렬 배포 활성화
export MULTI_DEPLOY_AUTO_ROLLBACK="true"       # 실패 시 자동 롤백
export MULTI_DEPLOY_CONTINUE_ON_ERROR="false"  # 에러 시 계속 진행
export MULTI_DEPLOY_DRY_RUN="false"            # Dry run 모드

# 배포 전략
export MULTI_DEPLOY_STRATEGY="sequential"      # sequential | parallel | rolling
export MULTI_DEPLOY_ROLLING_BATCH_SIZE="2"    # Rolling 배포 시 배치 크기

# 대기 시간
export MULTI_DEPLOY_WAIT_BETWEEN_DEPLOYS="2"  # 배포 간 대기 시간 (초)
export MULTI_DEPLOY_STABILIZATION_WAIT="5"    # 배포 후 안정화 대기 시간 (초)

# 검증 옵션
export MULTI_DEPLOY_VERIFY_BEFORE_DEPLOY="true"  # 배포 전 검증
export MULTI_DEPLOY_VERIFY_AFTER_DEPLOY="true"   # 배포 후 검증

# 로그 옵션
export MULTI_DEPLOY_LOG_LEVEL="INFO"
export MULTI_DEPLOY_SHOW_PROGRESS="true"

# 스케일링 옵션
export MULTI_DEPLOY_SCALE_IN_REVERSE="true"    # 스케일 다운 시 역순 제거
export MULTI_DEPLOY_SCALE_GRACEFUL="true"      # Graceful 스케일링
